# Environment
ENV=development
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_fitness_coach
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080  # 7 days

# OpenAI API
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8081"]
BCRYPT_ROUNDS=12

# External APIs
WGER_API_URL=https://wger.de/api/v2
EXERCISE_VIDEO_API_KEY=your-exercise-video-api-key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (Optional)
SENTRY_DSN=your-sentry-dsn

# File Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=ai-fitness-coach-assets
AWS_REGION=us-east-1