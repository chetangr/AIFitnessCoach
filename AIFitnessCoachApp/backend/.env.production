# Production Environment Configuration
ENV=production
PORT=8000

# Database - Replace with your production database URL
DATABASE_URL=postgresql://username:password@production-host:5432/ai_fitness_coach
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Cache - Replace with your production Redis URL
REDIS_URL=redis://production-redis:6379/0

# Authentication - Generate secure keys for production
JWT_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-32-CHAR-SECRET-KEY
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080  # 7 days

# OpenAI API - Replace with your production API key
OPENAI_API_KEY=sk-your-production-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Security
CORS_ORIGINS=["https://your-domain.com"]
BCRYPT_ROUNDS=12

# External APIs
WGER_API_URL=https://wger.de/api/v2

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring (Optional)
SENTRY_DSN=your-production-sentry-dsn

# File Storage (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=ai-fitness-coach-assets
AWS_REGION=us-east-1